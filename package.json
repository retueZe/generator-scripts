{
  "private": true,
  "name": "generator-scripts",
  "version": "1.0.0",
  "author": "retueze",
  "license": "MIT",
  "description": "Wraps generators into I/O script functions",
  "keywords": ["generator", "function", "script", "scripting", "async", "io", "promise"],
  "repository": {
    "type": "git",
    "url": "https://github.com/retueze/generator-scripts"
  },
  "type": "module",
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "build:dev": "tsc --inlineSourceMap",
    "build:prod": "npm run lint && rollup -c",
    "clean": "rm -rf build",
    "prepare": "npm run clean && npm run build:prod",
    "postpublish": "npm run clean"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-plugin-deprecation": "^1.5.0",
    "rollup": "^3.28.0",
    "rollup-plugin-dts": "^6.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "async-option": "^2.5.0"
  }
}
